<?xml version="1.0"?>
<robot name="fishing_boat">
  <!-- Coordinate convention: x forward, y left, z up -->
  <link name="base_link">
    <!-- Hull -->
    <visual name="hull">
      <origin xyz="0 0 0.30" rpy="0 0 0"/>
      <geometry>
        <box size="4.0 1.5 0.6"/>
      </geometry>
      <material name="hull_blue">
        <color rgba="0.10 0.25 0.60 1.0"/>
      </material>
    </visual>

    <!-- Deck block (optional, just to create a step) -->
    <visual name="deck">
      <origin xyz="0.2 0 0.55" rpy="0 0 0"/>
      <geometry>
        <box size="3.2 1.3 0.10"/>
      </geometry>
      <material name="deck_gray">
        <color rgba="0.55 0.55 0.55 1.0"/>
      </material>
    </visual>

    <!-- Cabin -->
    <visual name="cabin">
      <origin xyz="0.6 0 0.85" rpy="0 0 0"/>
      <geometry>
        <box size="1.2 1.0 0.6"/>
      </geometry>
      <material name="cabin_white">
        <color rgba="0.92 0.92 0.92 1.0"/>
      </material>
    </visual>

    <!-- Mast -->
    <visual name="mast">
      <origin xyz="0.9 0 1.45" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="1.2"/>
      </geometry>
      <material name="mast_black">
        <color rgba="0.10 0.10 0.10 1.0"/>
      </material>
    </visual>

    <!-- Simple fishing boom -->
    <visual name="boom">
      <origin xyz="0.9 0 1.85" rpy="0 0 0.35"/>
      <geometry>
        <cylinder radius="0.03" length="1.4"/>
      </geometry>
      <material name="boom_black">
        <color rgba="0.10 0.10 0.10 1.0"/>
      </material>
    </visual>

    <!-- Bow marker (helps you see forward direction) -->
    <visual name="bow_marker">
      <origin xyz="2.0 0 0.55" rpy="0 0 0"/>
      <geometry>
        <box size="0.15 0.15 0.15"/>
      </geometry>
      <material name="bow_red">
        <color rgba="0.80 0.10 0.10 1.0"/>
      </material>
    </visual>
  </link>

</robot>
